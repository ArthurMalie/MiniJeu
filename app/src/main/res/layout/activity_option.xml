<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">


        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OPTIONS"
            android:textAllCaps="true"
            android:textColor="?colorPrimary"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Debug Mode"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnDebug"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="null"
                android:textSize="20sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vitesse"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnVitesseMoins"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:text="-"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtSpeed"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#292929"
                android:gravity="center"
                android:text="1"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVitessePlus"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:text="+"
                android:textSize="30sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalibrerAccel"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:text="calibrer accelerometre"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCalibrerLight"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="calibrer lumiÃ¨re ambiante"
                android:textSize="10sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnResetScores"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Reinitialiser scores"
            android:textSize="10sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/btnOptionsMenu"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Menu principal"
            android:textSize="30sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>