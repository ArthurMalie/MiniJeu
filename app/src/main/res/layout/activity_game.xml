<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnBlackFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#46000000"
            android:text="PAUSE\n\n\n\n\n\n\n\n\n\n\n"
            android:textColor="?colorPrimary"
            android:textSize="50sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="12dp"
            android:text="||"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="500dp"
            android:layout_height="70dp"
            android:layout_below="@+id/space1"
            android:layout_centerInParent="true"
            android:text="Reprendre"
            android:textSize="25dp"
            android:visibility="gone" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnResume" />

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="500dp"
            android:layout_height="70dp"
            android:layout_below="@+id/space2"
            android:layout_centerInParent="true"
            android:text="Recommencer"
            android:textSize="25dp"
            android:visibility="gone" />

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnRetry" />

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="500dp"
            android:layout_height="70dp"
            android:layout_below="@+id/space3"
            android:layout_centerInParent="true"
            android:text="Menu Principal"
            android:textSize="25dp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>